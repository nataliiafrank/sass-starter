{
  "name": "sass-starter",
  "version": "1.0.0",
  "description": "Simple Sass project starter for small fed projects",
  "main": "index.html",
  "scripts": {
    "watch:sass": "node-sass -w --include-path ./node_modules/bemify/sass ./sass/main.scss ./css/style.css",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nataliiafrank/sass-starter.git"
  },
  "author": "Nataliia Frank",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nataliiafrank/sass-starter/issues"
  },
  "homepage": "https://github.com/nataliiafrank/sass-starter#readme",
  "devDependencies": {
    "bemify": "^0.1.2",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5"
  }
}
